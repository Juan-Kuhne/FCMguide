<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fcm"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffcc">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Idade:"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="20sp"/>
        <TextView
            android:id="@+id/idade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\?"
            android:textSize="25dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frequência Cardíaca Máxima:"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="20sp"/>

        <TextView
            android:id="@+id/fcm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\?"
            android:textSize="25dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Faixas"
            android:textSize="40dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caminhada Rápida:"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="20sp"/>
        <TextView
            android:id="@+id/cmrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\?"
            android:textSize="25dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trote:"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="20sp"/>
        <TextView
            android:id="@+id/trote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\?"
            android:textSize="25dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Corrida Leve:"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="20sp"/>
        <TextView
            android:id="@+id/cdleve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\?"
            android:textSize="25dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Corrida Moderada:"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="20sp"/>
        <TextView
            android:id="@+id/cdmod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\?"
            android:textSize="25dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Corrida Intensa:"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="20sp"/>
        <TextView
            android:id="@+id/cdint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\?"
            android:textSize="25dp"
            android:gravity="center"/>

    </LinearLayout>

</ScrollView>